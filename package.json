{
  "name": "lazy-commit",
  "version": "0.3.1",
  "description": "AI-powered Git commit message generator CLI tool",
  "main": "dist/cli.js",
  "bin": {
    "lazy-commit": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsup src/cli.ts --format cjs --target node20",
    "start": "node dist/cli.js",
    "format": "biome format src --write",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version:patch": "standard-version --release-as patch",
    "version:minor": "standard-version --release-as minor",
    "version:major": "standard-version --release-as major",
    "version": "standard-version"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "cli",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "ai": "^4.3.16",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^12.0.0",
    "conf": "^13.0.1",
    "figlet": "^1.8.1",
    "inquirer": "^9.2.15",
    "ora": "^8.0.1",
    "undici": "^7.10.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/figlet": "^1.7.0",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.30",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
